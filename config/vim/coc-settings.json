{
    "suggest.timeout": 500,
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"],
            "initializationOptions": {
                "usePlaceholders": true
            }
        }
    },
    "clangd.arguments": ["--background-index", "--clang-tidy", "--header-insertion=never"]
}
